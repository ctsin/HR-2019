        //- pagination: '.swiper-pagination-v',
        //- paginationClickable: true,
        direction: 'vertical',
        initialSlide :0,
        onSlideChangeStart:function(swiper){
          if(swiper.activeIndex=='0') { //- 首页
            $(".index-title").addClass("a-fadeinT-indexTitle");
            $(".hat").addClass("a-bouncein-hat");
            $(".boy").addClass("a-fadeinB-boy");
            $(".girl").addClass("a-fadeinB-boy");
            $(".grassland").addClass("a-fadein");
            $(".school").addClass("a-fadeinB-school");
          }
          if(swiper.activeIndex=='1') { //- 集团信息
            $(".floor-base").addClass("a-fadein");
            $(".building1").addClass("a-fadeinB");
            $(".building2").addClass("a-fadeinB");
            $(".rider ").addClass("a-driving");

            $(".zichan").addClass("a-ripple");
            $(".touzi").addClass("a-ripple");
            $(".yatai").addClass("a-ripple");
          }
          if(swiper.activeIndex=='2') { //- 行业地位
            $(".status-building").addClass("a-float-updown");
            $(".status-technology").addClass("a-enlarge");
            $(".status-culture").addClass("a-enlarge");
            $(".status-manage ").addClass("a-enlarge");
          }
          if(swiper.activeIndex=='3') { //- 薪酬福利
            $(".human-avater").addClass("a-enlarge");
          }
          if(swiper.activeIndex=='4') { //- 招聘岗位
            $(".aircraft").addClass("a-flying");
            $(".person1").addClass("a-fadeinT-person");
            $(".person2").addClass("a-fadeinT-person");
            $(".person3").addClass("a-fadeinT-person");
          }
          if(swiper.activeIndex=='5') { //- 校招行程			
            $(".schedule-one").addClass("a-show0");
            $(".schedule-two").addClass("a-show1");
            $(".schedule-three").addClass("a-show2");
            $(".schedule-four").addClass("a-show3");
            $(".schedule-five").addClass("a-show4");
            $(".schedule-six").addClass("a-show5");
            $(".schedule-seven").addClass("a-show6");
          }
          if(swiper.activeIndex=='6') { //- 联系我们		
            $(".clound1").addClass("a-float-updown");
            $(".clound2").addClass("a-float-lr");
            $(".fireworks").addClass("a-enlarge-fireworks");
          }
        },
      });

      //- 集团信息滑动块
      var swiperGroupSlide = new Swiper('#GroupSlide', {
        pagination: '.swiper-pagination-h',
        paginationClickable: true,
        //- loop: true,
        //- autoplay: 3000,
        autoplayDisableOnInteraction:false,
        onSlideChangeStart:function(swiper){
          if(swiper.activeIndex=='1') {
            $(".three").show(500);
            $(".eight").show(1000);
            $(".ten").show(1500);
            $(".twelve").show(2000);
            $(".fourteen").show(2500);
            $(".sixteen").show(3000);
          }					
        }
      });

      //- 薪酬福利滑动块
      var swiperWelfareSlide = new Swiper('#WelfareSlide', {
        pagination: '.swiper-pagination-h',
        paginationClickable: true,
        //- loop: true,
        //- autoplay: 4000,
        autoplayDisableOnInteraction:false,
      });


      //- 显示职位详情
      $(".sell-er").on('click',function(e){
        $(".job-index").hide();
        $("#sell-er").show();
        e.preventDefault();
      });
      $(".guanxi-er").on('click',function(e){
        $(".job-index").hide();
        $("#guanxi-er").show();
        e.preventDefault();
      });
      $(".dev-er").on('click',function(e){
        $(".job-index").hide();
        $("#dev-er").show();
        e.preventDefault();
      });
      $(".hr-er").on('click',function(e){
        $(".job-index").hide();
        $("#hr-er").show();
        e.preventDefault();
      });			
      //- 返回招聘岗位
      $(".back-jobs").on('touchend',function(e){
        $(this).parent().parent().hide();
        $(".job-index").show();
        e.preventDefault();
      });
    });